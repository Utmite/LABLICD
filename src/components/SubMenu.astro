---
import { fade } from "astro:transitions";
const { title = "", items = [] } = Astro.props;
---

<details class="group [&_summary::-webkit-details-marker]:hidden">
    <summary
        class="flex cursor-pointer items-center justify-left gap-2 rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-200 bg-gray-100 hover:text-gray-700"
    >
        <span class="text-lg font-medium w-full"> {title}</span>

        <span class="transition duration-300 group-open:-rotate-180">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="currentColor"
            >
                <path
                    fill-rule="evenodd"
                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                    clip-rule="evenodd"></path>
            </svg>
        </span>
    </summary>
    <section
        class="mt-2 space-y-1 pl-4 transition-all ease-in-out duration-300"
    >
        <slot />
        <ul class="text-xs space-y-1">
            {
                items.map((item: any) => (
                    <li>
                        {item.embed ? (
                            <span class="block rounded-lg px-4 py-2 mb-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700"> {item.name} </span>
                            <object
                                data={item.code}
                                type="application/pdf"
                                class="w-full h-96"
                            />
                        ) : (
                            <a
                                href={item.code}
                                class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700"
                                target={item.black ? "_blank" : ""}
                            >
                                {item.name}
                            </a>
                        )}
                    </li>
                ))
            }
        </ul>
    </section>
</details>
