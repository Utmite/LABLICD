---
import { isValidURL } from "../util/util.ts";
import FileIcon from "./icons/FileIcon.astro";
interface Item {
    title: string;
    text: string;
    link?: string;
}

interface Props {
    data: Item[];
}

const { data } = Astro.props;
---

<article class="flex gap-5 flex-wrap">
    {
        data.map((item) => (
            <section class="max-w-md bg-gray-50 hover:bg-gray-100 rounded-xl shadow overflow-hidden md:max-w-2xl p-4">
                        <header class="flex items-center gap-3">
                            <div class="h-10 w-10">
                                <FileIcon />
                            </div>
                            <div class="uppercase tracking-wide text-sm text-slate-600 font-semibold">
                                {item.title}
                            </div>
                        </header>
                        <div>
                            {isValidURL(item.link) ? (
                                <span class="block rounded-lg pl-4 py-2 text-sm font-medium text-gray-500  hover:text-gray-700">
                                    {item.text}
                                </span>
                                <a
                                    href={item.link}
                                    class="block rounded-lg pl-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-200 hover:text-gray-700 truncate"
                                    target="_blank"
                                >
                                    {item.link}
                                </a>
                            ) : (
                                <span class="block rounded-lg pl-4 py-2 text-sm font-medium text-gray-500 ">
                                    {item.text}
                                </span>
                            )}
                        </div>
            </section>
        ))
    }
</article>
